<h1>Movies!!!</h1>

<ul>
  {{#each list}}
  <li>
    <p>
      {{this.id}}. {{this.movie}}

      <form action="/{{this.id}}?_method=DELETE" method="POST">
        <button type="submit">Delete Movie!</button>
      </form>
    </p>
  </li>
  {{/each}}
</ul>

<h2>Create a Movie</h2>
<form method="POST" action="/" class="button-size">
  <textarea type="text" name="newMovie"></textarea>
  <button type="submit">Save Movie!</button>
</form>

<h2>Update a Plan</h2>
<form action="/?_method=PUT" method="POST" class="button-size">
  <select name="id">
		{{#each list}}
			<option value="{{this.id}}">{{this.movie}}</option>
		{{/each}}
	</select>
  <textarea type="text" name="newMovie" placeholder="Choose a movie"></textarea>
  <button type="submit">Update Plan!</button>
</form>
